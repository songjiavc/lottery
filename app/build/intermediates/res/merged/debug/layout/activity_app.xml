<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    android:paddingBottom="0px"
    android:paddingLeft="0px"
    android:paddingRight="0px"
    android:paddingTop="0px"
    tools:context="com.xuhen.lottery.activity.AppActivity" >

    <com.xuhen.lottery.view.MyImageView 
    	android:id="@+id/iv_title_bg"
    	android:layout_width="1080px"
    	android:layout_height="122px"
    	android:layout_x="0px"
    	android:layout_y="0px"
    	android:background="@drawable/iv_title_bg"        
    />
    <com.xuhen.lottery.view.MyImageView 
    	android:id="@+id/iv_title_user_bg"
    	android:layout_width="361px"
    	android:layout_height="120px"
    	android:layout_x="0px"
    	android:layout_y="0px"
    	android:background="@drawable/iv_title_item_bg"        
    />
    <com.xuhen.lottery.view.MyImageView 
    	android:id="@+id/iv_title_app_bg"
    	android:layout_width="361px"
    	android:layout_height="120px"
    	android:layout_x="360px"
    	android:layout_y="0px"
    	android:background="@drawable/iv_title_item_bg"        
    />
    <com.xuhen.lottery.view.MyImageView 
    	android:id="@+id/iv_title_setting_bg"
    	android:layout_width="361px"
    	android:layout_height="120px"
    	android:layout_x="720px"
    	android:layout_y="0px"
    	android:background="@drawable/iv_title_item_bg"        
    />
    
    <com.xuhen.lottery.view.MyTextView 
        android:id="@+id/tv_title_user"
	   	android:layout_width="361px"
    	android:layout_height="120px"
    	android:layout_x="0px"
    	android:layout_y="0px"
	    android:text="账号管理"
	    android:textColor="#fefffc"
	    android:gravity="center_vertical"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textSize="20sp" />
    
    <com.xuhen.lottery.view.MyTextView 
        android:id="@+id/tv_title_app"
	   	android:layout_width="361px"
    	android:layout_height="120px"
    	android:layout_x="360px"
    	android:layout_y="0px"
	    android:text="应用库"
	    android:textColor="#fefffc"
	    android:gravity="center_vertical"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textSize="20sp" />
    
    <com.xuhen.lottery.view.MyTextView 
        android:id="@+id/tv_title_setting"
	   	android:layout_width="361px"
    	android:layout_height="120px"
    	android:layout_x="720px"
    	android:layout_y="0px"
	    android:text="系统通用"
	    android:textColor="#fefffc"
	    android:gravity="center_vertical"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textSize="37px" />
    
    <!-- APP列表 -->
    <GridView
        android:id="@+id/gv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0px"
        android:layout_y="600px"
        android:numColumns="3">
    </GridView>
    <!-- 公司公告背景 -->
    <com.xuhen.lottery.view.MyImageView 
    	android:id="@+id/app_iv_company_notice_bg"
    	android:layout_width="1080px"
    	android:layout_height="122px"
    	android:layout_x="0px"
    	android:layout_y="0px"
    	android:background="@drawable/app_iv_company_notice_bg"        
    />
    <!-- APP升级背景 -->
    <com.xuhen.lottery.view.MyImageView 
    	android:id="@+id/app_iv_app_update_bg"
    	android:layout_width="1080px"
    	android:layout_height="122px"
    	android:layout_x="0px"
    	android:layout_y="0px"
    	android:background="@drawable/app_iv_app_update_bg"        
    />
    <com.xuhen.lottery.view.MyBorderTextView
        android:id="@+id/app_tv_company_notice"
	   	android:layout_width="557px"
    	android:layout_height="140px"
    	android:layout_x="31px"
    	android:layout_y="1734px"
	    android:text="测试公司通知正文内容"
	    android:textColor="#052635"
	    android:gravity="center_vertical"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textSize="24px" />
    <!-- 公司公告下一条按钮 -->
    <com.xuhen.lottery.view.MyImageButton
    	android:id="@+id/app_btn_next_company_notice"
    	android:layout_width="68px"
    	android:layout_height="48px"
    	android:layout_x="541px"
    	android:layout_y="1657px"
    	android:background="@drawable/app_btn_next_company_notice_up"        
    />
    <!-- 公司公告剩余数 -->
    <com.xuhen.lottery.view.MyTextView 
        android:id="@+id/app_tv_app_company_notice_number"
	   	android:layout_width="100px"
    	android:layout_height="100px"
    	android:layout_x="120px"
    	android:layout_y="120px"
	    android:text="0"
	    android:background="@drawable/number_round"
	    android:textColor="#ffffff"
	    android:gravity="center"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textSize="24px" />
    <!-- APP升级下一条按钮 -->
    <com.xuhen.lottery.view.MyImageButton
    	android:id="@+id/app_btn_next_app_news"
    	android:layout_width="68px"
    	android:layout_height="48px"
    	android:layout_x="541px"
    	android:layout_y="1657px"
    	android:background="@drawable/app_btn_next_company_notice_up"        
    />
    <!-- APP升级按钮 -->
    <com.xuhen.lottery.view.MyImageButton
    	android:id="@+id/app_btn_app_update"
    	android:layout_width="68px"
    	android:layout_height="48px"
    	android:layout_x="541px"
    	android:layout_y="1657px"
    	android:background="@drawable/app_btn_app_update_up"        
    />
    <!-- APP升级内容 -->
    <com.xuhen.lottery.view.MyBorderTextView
        android:id="@+id/app_tv_app_update_message"
	   	android:layout_width="557px"
    	android:layout_height="140px"
    	android:layout_x="31px"
    	android:layout_y="1734px"
	    android:text="有新的app需要升级,请升级"
	    android:textColor="#052635"
	    android:gravity="center_vertical"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textSize="22px" />
    <!-- APP升级剩余数 -->
    <com.xuhen.lottery.view.MyTextView 
        android:id="@+id/app_tv_app_update_number"
	   	android:layout_width="30px"
    	android:layout_height="30px"
    	android:layout_x="120px"
    	android:layout_y="120px"
	    android:text="0"
	    android:background="@drawable/number_round"
	    android:textColor="#ffffff"
	    android:gravity="center"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textSize="14px" />
</AbsoluteLayout>
