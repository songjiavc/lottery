<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="600px"
    android:layout_height="480px"
    android:layout_gravity="center"
    android:layout_margin="0dp"
    android:background="@drawable/dialog_round_shape_bg"
    android:padding="0dp" >

    <com.xuhen.lottery.view.MyBorderTextView
        android:id="@+id/custom_dialog_tv_title"
        android:layout_x="0px"
        android:layout_y="0px"
        android:layout_width="600px"
        android:layout_height="40px"
        android:gravity="center"
        android:text="标题"
        android:visibility="visible"
        android:textColor="#e7eced"
        android:background="@drawable/dialog_title_round_shape_bg" />

    <com.xuhen.lottery.view.MyTextView
        android:id="@+id/custom_dialog_tv_message"
        android:layout_x="0px"
        android:layout_y="40px"
        android:layout_width="600px"
        android:layout_height="380px"
        android:lineSpacingMultiplier="1.5"
        android:minHeight="120.0dip"
        android:paddingBottom="15.0dip"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:paddingTop="15.0dip"
        android:textColor="#4e4e4e"
        android:background="@drawable/dialog_message_round_shape_bg" />

    <com.xuhen.lottery.view.MyImageButton
        android:id="@+id/custom_dialog_btn_ok"
        android:layout_x="150px"
        android:layout_y="400px"
        android:layout_width="120px"
        android:layout_height="40px"
        android:background="@drawable/custom_dlalog_btn_ok_up"/>

    <com.xuhen.lottery.view.MyImageButton
        android:id="@+id/custom_dialog_btn_cancel"
        android:layout_x="330px"
        android:layout_y="400px"
        android:layout_width="120px"
        android:layout_height="40px"
        android:background="@drawable/custom_dlalog_btn_cancel_up"
        android:gravity="center"/>

</AbsoluteLayout>